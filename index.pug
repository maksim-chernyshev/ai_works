        footer.footer
            div.footer__inner.content-wrapper 
                div.footer__content
                    div.footer__main
                        div.footer__column
                            img(class="footer__logo" src="assets/img/logo-inverted.svg" alt="Логотип")
                            a(class="footer__link footer__link--email text" href="mailto:support@study.ai") support@study.ai
                            p.footer__schedule.text.text--m.text--light Пиши с&nbsp;10:00&nbsp;&dash; 19:30
                        div.footer__column
                            h3.footer__list-title.text.text--m Курсовые по предметам
                            ul(class="footer__list" role="list")
                                each link in footerSubjects
                                    li.footer__list-item
                                        a(class="footer__link text text--m text--light" href=`${link.url}` target="_blank") #{link.name}
                                li.footer__list-item
                                    a(class="footer__link text text--m text--light" href="#" target="_blank") Все предметы
                        div.footer__column
                            h3.footer__list-title.text.text--m Другие GPT инструменты
                            ul(class="footer__list" role="list")
                                each link in footerTypes
                                    li.footer__list-item
                                        a(class="footer__link text text--m text--light" href=`${link.url}` target="_blank") #{link.name}
                        div.footer__column.footer__column--about
                            h3.footer__list-title.text.text--m О сервисе
                            ul(class="footer__list" role="list")
