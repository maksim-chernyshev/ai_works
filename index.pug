doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Document
        meta(name="description" content="")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet")
        link(rel="stylesheet" href="css/main.min.css")
    body
        header.header
            div.header__inner.content-wrapper
                img(class="header__logo" src="assets/img/logo.svg" alt="Логотип")
                div.header__auth
                    button(class="header__login button button--clear text text--m" type="button") Войти<span>&nbsp;в аккаунт</span>
                    button(class="header__signup button button--blue text text--m" type="button") Зарегистрироваться
        main.main
            //- экран "Напиши курсовую с нейросетью за 5 минут"
            //- section.hero.hero-work
            //-     div.hero__inner.content-wrapper
            //-         h1.hero__heading.heading.heading--l Напиши курсовую <br> с&nbsp;нейросетью <mark>за&nbsp;5&nbsp;минут</mark>
            //-         p.hero__text.text.text--l Генерируй содержание, получай готовую работу и&nbsp;редактируй онлайн!
            section.hero.hero-task
                div.hero__inner.content-wrapper
                    h1.hero__heading.heading.heading--l Решай задачи <br> с&nbsp;нейросетью <mark>за&nbsp;5&nbsp;минут</mark>
                    p.hero__text.text.text--l Трудное задание? Просто загрузи фото или пропиши задание текстом и&nbsp;получи ответ!

                    div.hero-task__content
                        div.hero-task__query
                            label(class="hero-task__query-label text text--m" for="query-input") Твоя задача
                            form(class="hero-task__form" action="#" method="post")
                                div.hero-task__form-box
                                    textarea(class="hero-task__textarea text text--m text--light" id="query-input" placeholder="Напиши подробно задачу")
                                    label(class="hero-task__file-label hero-task__file-label--mobile text text--m" for="file") 
                                        img(src="assets/img/file-img.svg" role="presentation")    
                                        span Или загрузи фото
                                    label.hero-task__file-label.hero-task__file-label--desktop
                                        img(src="assets/img/file-img.svg" role="presentation") 
                                        span.text.text--m.text--light Перетащи файл&nbsp;<label class="text text--m" for="file">или загрузи с компьютера</label>
                                    input(class="hero-task__file-input visually-hidden" type="file" id="file")
                                button(class="hero-task__button button button--blue" type="button") Решить задачу
                            div.hero-task__counter.text.text--m
                                | У тебя&nbsp;<span data-js="attempts">8</span>&nbsp;генераций
                                div
                                    img(class="hero-task__counter-tip" src="assets/img/question.svg")
                        div.hero-task__result
                            div.hero-task__preview-text.text.text--m Решение задачи будет здесь

            section.steps
                div.steps__inner.content-wrapper
                    h2.steps__heading.heading.heading--m Написание курсовой&nbsp;&mdash; это просто!
                    ul(class="steps__list" role="list") 
                        li.steps__item
                            img(src="assets/img/step-1.png" role="presentation")
                            p.text.text--xl Напиши тему работы и нажми «Сгенерировать»
                        li.steps__item
                            img(src="assets/img/step-2.png" role="presentation")
                            p.text.text--xl Смотри содержание, регистрируйся и покупай готовую работу
                        li.steps__item
                            img(src="assets/img/step-3.png" role="presentation")
                            p.text.text--xl Редактируй онлайн, сохраняй в Word, отправляй преподавателям
                    button(class="steps__button button button--blue text text--m" type="button") Сгенерировать работу

            section.solution
                div.solution__inner.content-wrapper
                    div.solution__content
                        div.solution__heading-text.text.text--xl Подробная инструкция
                        h2.solution__heading.heading.heading--m Как написать курсовую работу с&nbsp;нейросетью
                        //- тут в дальнейшем будет видео
                        img(class="solution__video-plug" src="assets/img/solution_video.png")
                        ol(class="solution__list")
                            li.solution__item.text.text--m.text--light Жили-были в далеком лесу три маленьких енота: Рыжик, Серый и Пушистик. Они были лучшими друзьями и всегда веселились вместе.
                            li.solution__item.text.text--m.text--light Однажды, когда они гуляли по лесу, они обнаружили загадочный ларец. Изнутри вылетела волшебная фея.
                            li.solution__item.text.text--m.text--light Рыжик сразу решился и загадал, чтобы весь лес был полон вкусных орехов.
                            li.solution__item.text.text--m.text--light Серый задумался и загадал, чтобы у всех животных в лесу было достаточно еды и тепла.
                        button(class="solution__button button button--blue text text--m" type="button") Сгенерировать работу

            - var tariffCards = [{label: 'Генерация 3-х работ', tip: 'Тут подсказка для карточки', price: '640' }, {label: 'Генерация 10-и работ', tip: 'Тут подсказка для карточки', price: '2500' },{label: 'Генерация 3-х работ', tip: 'Тут подсказка для карточки', price: '640' }]

            section.tariffs
                div.tariffs__inner.content-wrapper
                    div.tariffs__header-box
                        h2.tariffs__heading.heading.heading--m Выбери число генераций
                        .tariffs__toggler
                            input.tariffs__toggle-input.visually-hidden(type="radio" name="tariff" id="tariff_monthly" value="monthly" checked)
                            label.tariffs__toggle-button.button.tariffs__toggle-button--monthly(for="tariff_monthly")
                                span.text.text--m
                                | <span class="tariffs__toggle-button-desktop-text">Платить</span>&nbsp;ежемесячно

                            input.tariffs__toggle-input.visually-hidden(type="radio" name="tariff" id="tariff_annually" value="annually" aria-label="Выгоднее")
                            label.tariffs__toggle-button.button.tariffs__toggle-button--annually(for="tariff_annually")
                                span.text.text--m Оплатить на год
                            span.tariffs__offer-label.text.text--m(aria-hidden="true") Выгоднее
                    ul.tariffs__cards(role="list")
                        each card in tariffCards 
                            li.tariffs__card
                                h3.tariffs__card-label
                                    span.tariffs__card-label-text.text.text--m #{card.label}
                                    img(src="assets/img/question.svg" role="presentation")
                                    span.tariffs__card-label-tip #{card.tip}
                                div.traiffs__price #{card.price}&nbsp;₽
                                ul.tariffs__card-list(role="list")  
                                    li.tariffs__card-list-item.text.text--m.text--light Выгода номер один
                                    li.tariffs__card-list-item.text.text--m.text--light Выгода номер два
                                    li.tariffs__card-list-item.text.text--m.text--light Выгода номер три
                                button.tariffs__card-button.button.button--blue(type="button") Выбрать

            - var works = [{name: 'Маркетинговый анализ деятельности фирмы', fileType: 'DOC', unique: '97.7', symbols: '1283'}, {name: 'Маркетинговый анализ фирмы', fileType: 'PDF', unique: '55', symbols: '300'}, {name: 'Анализвываываывавыаываываываываываываыва', fileType: 'EXL', unique: '100', symbols: '3'}, {name: 'Маркетинговый анализ фирмы', fileType: 'PDF', unique: '55', symbols: '300'}, {name: 'Анализвываываывавыаываываываываываываыва', fileType: 'EXL', unique: '100', symbols: '3'}];

            section.works
                div.works__inner.content-wrapper
                    div.works__content 
                        div.works__heading-text.text.text--xl Написаны искусственным интеллектом
                        div.works__swiper-header
                            h2.works__heading.heading.heading--m Примеры готовых работ
                            div.works__swiper-controls
                                button(class="works__swiper-controls-button works__swiper-controls-button--prev" aria-label="Предыдущая работа")
                                    img(src="assets/img/caret-right.svg" role="presentation")
                                button(class="works__swiper-controls-button works__swiper-controls-button--next" aria-label="Следующая работа")
                                    img(src="assets/img/caret-right.svg" role="presentation")
                        div(class="works__list swiper" data-js="worksSwiper")
                            div.swiper-wrapper
                                each work in works
                                    div.works__item.swiper-slide
                                        h3.works__item-title.text.text--m #{work.name}
                                        div.works__item-label.works__item-label--unique
                                            img(src="assets/img/like.png" role="presentation")
                                            div.works__item-label-text.text.text--s.text--light #{work.unique}% антиплагиат
                                        div.works__item-label
                                            img(src="assets/img/pen.png" role="presentation")
                                            div.works__item-label-text.text.text--s.text--light #{work.symbols}&nbsp;<span>символов</span>
                                        div.works__file.text.text--m #{work.fileType}

